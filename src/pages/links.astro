  <section class="mx-auto max-w-xl space-y-4 px-4">
    <h2 class="font-semibold">Links</h2>
    <ul class="flex flex-col gap-2 font-medium [&_a]:block [&_a]:p-4 [&_a]:rounded [&_a]:border [&_a]:border-gray-200">
      <li>
        <a href={AUTHOR_X}>X (Twitter)</a>
      </li>
      <li>
        <a href={AUTHOR_FIGMA}>Figma</a>
      </li>
      <li>
        <a href={AUTHOR_YOUTUBE}>YouTube</a>
      </li>
      <li>
        <a href={AUTHOR_LINKEDIN}>LinkedIn</a>
      </li>
      <li>
        <a href={AUTHOR_INSTAGRAM}>Instagram</a>
      </li>
      <li>
        <a href={AUTHOR_BSKY}>Bluesky</a>
      </li>
      <li>
        <a href={AUTHOR_THREADS}>Threads</a>
      </li>
      <li>
        <a href={AUTHOR_LAYERS}>Layers</a>
      </li>
      <li>
        <a href={AUTHOR_GITHUB}>GitHub</a>
      </li>
      <li>
        <a href={AUTHOR_DRIBBBLE}>Dribbble</a>
      </li>
      <li>
        <a href={AUTHOR_BEHANCE}>Behance</a>
      </li>
      <li>
        <a href={AUTHOR_MASTODON}>Mastodon</a>
      </li>
    </ul>
  </section>
</Layout>
