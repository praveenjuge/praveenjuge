---
import Layout from "../Layout.astro";
import { 
  AUTHOR_BSKY,
  AUTHOR_DRIBBBLE,
  AUTHOR_GITHUB,
  AUTHOR_INSTAGRAM,
  AUTHOR_LAYERS,
  AUTHOR_LINKEDIN,
  AUTHOR_MASTODON,
  AUTHOR_THREADS,
  AUTHOR_YOUTUBE,
  AUTHOR_X,
  AUTHOR_FIGMA,
  AUTHOR_BEHANCE,
