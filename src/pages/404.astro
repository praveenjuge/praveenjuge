---
import { AUTHOR_X } from "../consts";
import Layout from "../Layout.astro";
---

<Layout title="Page not found (404)">
  <section class="mx-auto max-w-sm px-4 py-48 text-center">
    <h1 class="mb-2 font-bold">Page not found (404)</h1>
    <p class="opacity-75">
      If you think this is a mistake, please let me know at{" "}
      <a
        href={AUTHOR_X}
        target="_blank"
        class="underline"
        rel="noreferrer noopener">Twitter</a
      >.
    </p>
  </section>
</Layout>
